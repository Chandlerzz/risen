@import "/miniprogram_npm/vant-weapp/common/index.wxss";
.card{
  position: relative;
  padding: 10px 20px 10px 10px;
  color: #333;
  background-color: #ffffff;
  box-sizing: border-box;

}
.card__panel{
  display: flex;
  padding: 5px 20px 10px;
  flex-direction: column;
  justify-items:center;
  align-items: left;
  /* border-bottom:1px solid#c8c8c8; */
  background-color: #FFFFFF;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,0.10);
  border-radius: 10px;

}

.card__panel--noborder {
  display: flex;
  padding: 5px 10px 5px;
  flex-direction: column;
  justify-items:center;
  align-items: left;
  border-bottom:1px solid#c8c8c8;

}
.card__header {
  padding: 5px 5px 5px;
}

.title {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 20px;
}
.card__body {
  margin: 5px 0px;
}

.field {
  margin: 5px;
  display: flex;
  align-items: center;

}
.field__label{
  font-size:28rpx;
  white-space: pre;
  color: #6D7278;
  font-weight: 400;
}
.field__icon{

}
.icon{
  width:15px;
  height:15px;
  padding-right: 10px;

}
.icon__wrapper{


}
.field__value {
  margin-left:20rpx;
  font-size:28rpx;
  color: #6D7278;
  font-weight: 400;

}
.card__footer {
  display:flex;
  justify-items:space-between;

}

/*todo 次数修改了对箭头符号的增加图标*/
.icon__right {
  float: right;
  display:inline-block;
  margin: 5% 0 0 0 ;
}

.field__class{
  font-size: 12px;
  color: #999999;
  font-weight: 400;
  border-radius: 5px;
  background-color: #ecebeb;
  padding: 2px;

}
